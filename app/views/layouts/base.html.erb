<!DOCTYPE html>
<html>
<head>

	<title><%= page_title %></title>

	<%= stylesheet_link_tag    'application' %>
	<%= stylesheet_link_tag    'http://cdn2.editmysite.com/css/sites.css' %>
	<%= stylesheet_link_tag    'http://www.amsterdam50.nl/files/main_style.css' %>
	<%= stylesheet_link_tag    'amsterdam50-extra.css' %>
	<%= stylesheet_link_tag    '//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,700,400italic,700italic&subset=latin,latin-ext' %>
	<%= stylesheet_link_tag    '//fonts.googleapis.com/css?family=Alice&subset=latin,latin-ext' %>
	<%= stylesheet_link_tag    '//fonts.googleapis.com/css?family=Raleway:400,300,200,700&subset=latin,latin-ext' %>
	<%= stylesheet_link_tag    '//fonts.googleapis.com/css?family=Molengo&subset=latin,latin-ext' %>

	<%= javascript_include_tag 'application' %>


	<%= csrf_meta_tag %>

	<link rel="icon" href="<%= url_for '/favicon.ico' %>">
</head>

<body class="wsite-theme-light">
<div id="wrapper"><div class="bg-wrapper">

	<div id="header">
		<div id="sitename"><span class="wsite-logo"><a href="<%= root_path %>">
			<span id="wsite-title"><%= site_name %></span>
		</a></span></div>
	</div>

	<div id="navigation">
		<%= render partial: 'layouts/menu' %>
	</div>

	<div id="content-wrapper">
		<div id="content"><div id="wsite-content" class="wsite-not-footer">

			<a id="main"></a>
			<div class="main">
				<% if flash[:notice] %>
					<div class="flash notice">
						<p><%= flash[:notice].untaint %></p>
					</div>
				<% elsif flash[:error] %>
					<div class="flash error">
						<p><%= flash[:error].untaint %></p>
					</div>
				<% end %>

				<%= controller_side_links %>
				<div class="paragraph">
				<%= yield %>
				</div>

			</div>

	</div></div>
	</div>
</div></div>
</body>

</html>
